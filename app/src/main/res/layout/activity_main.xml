<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivCompanyInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="8dp"
        android:layout_weight="2.0"
        android:src="@drawable/company_info" />

    <ImageView
        android:id="@+id/mIvGPSImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1.0"
        android:background="@drawable/map_border" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mTvGPSImageStopped"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/text_gps_image_close"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/mBtnStart"
            style="@style/SwitchButtonStyle"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:checked="true"
            app:kswBackDrawable="@drawable/ios_back_drawable"
            app:kswTextExtra="10dp"
            app:kswTextOff="OFF"
            app:kswTextOn="ON"
            app:kswThumbColor="@color/colorWhite" />

        <TextView
            android:id="@+id/mTvGPSImageRunning"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/text_gps_image_open"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    </LinearLayout>
</LinearLayout>
